{
  "name": "lottery",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npx hardhat compile",
    "deploy-goerli": "npx hardhat run ./scripts/Lottery_deploy.ts --network ETH_GOERLI",
    "deploy-sepolia": "npx hardhat run ./scripts/Lottery_deploy.ts --network ETH_SEPOLIA",
    "deploy-mumbai": "npx hardhat run ./scripts/Lottery_deploy.ts --network POLY_MUMBAI",
    "node": "npx hardhat node",
    "deploy-local": "npx hardhat run ./scripts/Lottery_deploy.ts --network localhost"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "@openzeppelin/contracts": "^4.9.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "hardhat": "^2.14.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  }
}
